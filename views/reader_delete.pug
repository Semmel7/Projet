extends layout

block content
  h1 #{title}: #{reader.surname}
  p Number: #{reader.number}

  if reader_opinions.length

    p #[strong Delete the following opinions before attempting to delete this reader.]

    div(style='margin-left:20px;margin-top:20px')

      h5 Opinions

       dl
      each opinion in reader_opinions
        dd
          a(href=opinion.book.url) #{opinion.book.title}
        div(style='margin-left:10px;margin-top:10px')
        dd #[em #{opinion.comments}] 
        dt
         a(href=opinion.url) opinion details
        div(style='margin-left:20px;margin-top:20px')

  else
    p Do you really want to delete this Reader?

    form(method='POST' action='')
      div.form-group
        input#readerid.form-control(type='hidden',name='readerid', required='true', value=reader._id )

      button.btn.btn-primary(type='submit') Confirm
