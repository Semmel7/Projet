extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='surname') Surname:
      input#surname.form-control(type='text' placeholder=' Surname' name='surname' required='true' value=(undefined===reader ? '' : reader.surname) )
    div.form-group 
      label(for='number') Number:
      input#number.form-control(type='text' placeholder='Number' name='number' required='true' value=(undefined===reader ? '' : reader.number) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
